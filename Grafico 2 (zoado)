from pandas import *

abrir = read_csv('VideoGames.csv', sep=',')

def notas_por_genero(gen):
    generos = {'Esporte': 'Sports', 'Plataforma': 'Platform', 'Corrida': 'Racing',
               'Puzzle': 'Puzzle', 'Outros': 'Misc', 'Fps': 'Shooter',
               'Simulação': 'Simulation', 'Ação': 'Action', 'Luta': 'Fighting',
               'Aventura': 'Adventure', 'Estrategia': 'Strategy'}

>>>>>>> Stashed changes
    gen = generos[str(gen)]
    NotasUsuario = []
    NotasCriticos = []
    abrir = read_csv('desgraça.csv', sep=',')
    for i in range(len(abrir)):
        linha = abrir.iloc[i]
        usuario = linha['User_Score']
        critico = linha['Critic_Score']
        genero = linha['Genre']
        if genero == gen:
            if math.isnan(float(usuario)) == False:
                NotasUsuario.append(usuario)
            if math.isnan(float(critico)) == False:
                NotasCriticos.append(critico)
    return NotasUsuario, NotasCriticos

